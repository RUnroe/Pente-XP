<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="main.controllers.FxHandler">
   <children>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <Text layoutX="324.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0" text="PENTE"
                  textAlignment="CENTER">
               <font>
                  <Font size="36.0"/>
               </font>
            </Text>
         </children>
      </AnchorPane>
      <AnchorPane prefHeight="676.0" prefWidth="750.0">
         <children>
            <Text layoutX="313.0" layoutY="23.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Instructions" textAlignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <Button fx:id="SettingsBtn" layoutX="391.0" layoutY="472.0" mnemonicParsing="false" onAction="#GoToSettings"
                    text="To Settings"/>
            <Text layoutX="138.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0" text="The game will start with an empty board. The first player begins the game by playing one stone in the center point. Thereafter each player takes their turn by playing one stone on an empty intersection. The stones are played on the intersections of the lines, including the corners." textAlignment="CENTER" wrappingWidth="473.77693462371826" />
            <Text layoutX="138.0" layoutY="126.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Once a player places a stone, it cannot be moved again, but it can be captured." wrappingWidth="473.77693462371815" />
            <Text layoutX="326.0" layoutY="348.0" strokeType="OUTSIDE" strokeWidth="0.0" text="How To Win" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <Text layoutX="309.0" layoutY="172.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Capturing Pieces" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <Text layoutX="138.0" layoutY="201.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Whenever an opponent has two stones (and only two) which are adjacent to each other, they are vulnerable to capture. The pair can be captured by bracketing its two ends with one's own stones" textAlignment="CENTER" wrappingWidth="473.77693462371815" />
            <Text layoutX="280.0" layoutY="382.0" strokeType="OUTSIDE" strokeWidth="0.0" text="A player can win two different ways:" />
            <Text layoutX="261.0" layoutY="407.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Get 5 or more stones in a row with no gaps" />
            <Text layoutX="273.0" layoutY="431.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Capture the opponent's pieces 5 times" />
            <Text layoutX="138.0" layoutY="258.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Players can move into a &quot;capture&quot; position (both end caps placed down) without their pieces being captured." textAlignment="CENTER" wrappingWidth="473.7769346237182" />
            <Text layoutX="223.0" layoutY="300.0" strokeType="OUTSIDE" strokeWidth="0.0" text="It is legal to capture two or more pairs with a single move" />
            <Button fx:id="btnHelpToGame" layoutX="281.0" layoutY="472.0" mnemonicParsing="false"
                    onAction="#onHelpToGameClick" text="To Game"/>
         </children>
      </AnchorPane>
  </children>
</VBox>
